fetch('https://static2.corriereobjects.it/includes_methode/2020/last_updated_hour.html?v=20220819003829')
  .then(function (response) {
    return response.text();
  })
  .then(function (html) {
    var parser = new DOMParser();
    var doc = parser.parseFromString(html, 'text/html');
    var hour = doc.querySelector('span.hour').textContent;
    document.querySelector('span.hour').innerHTML = hour;
    document.querySelector('span.hour').style.visibility = "visible";

  })
  .catch(function (err) {
    document.querySelector('span.hour').style.visibility = "visible";
    console.warn('Something went wrong.', err);
  });